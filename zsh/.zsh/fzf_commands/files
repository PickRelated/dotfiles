#!/usr/bin/env bash
# vim: filetype=zsh

# cd to selected directory
alias f='fc'
fc() {
  dir=$(ag -g . --ignore node_modules -U | sed -e 's:/[^/]*$::' | uniq | fzf)
  cd "$dir"
}

# Find all repos in ~/rep
alias r='fr'
fr() {
  rep_dir=~/rep
  reps=$(ls -d $rep_dir/*/.git 2> /dev/null | sed s/\\/\.git//g | sed "s|${rep_dir}\/||g")
  subreps=$(ls -d $rep_dir/*/*/.git 2> /dev/null | sed s/\\/\.git//g | sed "s|${rep_dir}\/||g")
  dir=$(echo "$reps\n$subreps" | fzf --no-sort)
  cd "$rep_dir/$dir"
}
